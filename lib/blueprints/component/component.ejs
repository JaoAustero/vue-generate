/**
 * A decsription for the component
 * @displayName Template
 */
export default {
    name: 'TemplateComponent',

    functional: <%= isFunctional ? true : false %>,

    inheritAttrs:  <%= isFunctional ? false : true %>,

    props:
    {
        /**
         * A demo property generated by v-gen
         * @value option1, option2
         */
        demoProp:
        {
            type: String,
            default: null,
        },
    },

    <% if (!isFunctional) { %>
    created()
    {
        // Initiated when the component was loaded.
    },

    mounted()
    {
        // Initated when the component is ready.
    },

    destroyed()
    {
        // Iniated when the vue component was destroyed.    
    },
    <% } %>

    render(h<%- isFunctional ? ', { data }' : '' %>)
    {
        return h(
            'div',

            {
                class: '',

                staticClass: <%- isFunctional ? `data.staticClass` : 'this.$data.staticClass'%>,
            },

            '<%= filename %>',
        );
    },
};
